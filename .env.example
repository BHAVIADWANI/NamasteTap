# Environment Configuration Template

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here-minimum-50-characters

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=False

# Allowed hosts - Add your domain names here
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL (Production) - Uncomment for production use
DATABASE_URL=postgresql://one3tap_user:secure_password@db:5432/one3tap_db

# SQLite (Development) - Comment out for production
# DATABASE_URL=sqlite:///./db.sqlite3

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Redis Cache URL
REDIS_URL=redis://redis:6379/1

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Default from email
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# ============================================================================
# SECURITY SETTINGS (Production Only)
# ============================================================================

# SSL/HTTPS Configuration
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# SUPERUSER CREATION (Optional)
# ============================================================================

# These variables will automatically create a superuser if one doesn't exist
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=secure_admin_password

# ============================================================================
# MEDIA AND STATIC FILES
# ============================================================================

# Media files URL (for uploaded content)
MEDIA_URL=/media/

# Static files URL (for CSS, JS, images)
STATIC_URL=/static/

# ============================================================================
# APPLICATION SPECIFIC SETTINGS
# ============================================================================

# Company name for branding
COMPANY_NAME=ONE3TAP
COMPANY_EMAIL=contact@yourdomain.com
COMPANY_PHONE=+1234567890

# NFC Card Settings
DEFAULT_CARD_TEMPLATE=corporate
MAX_CARDS_PER_USER=10

# Analytics
ENABLE_ANALYTICS=True
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# ============================================================================
# THIRD PARTY INTEGRATIONS
# ============================================================================

# PayPal Configuration (if using payments)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # sandbox or live

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_API_KEY=your_twitter_api_key
LINKEDIN_API_KEY=your_linkedin_api_key

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (Docker volume mounted)
LOG_FILE=/app/logs/django.log

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Database connection pooling
DB_CONN_MAX_AGE=600

# Cache timeout (seconds)
CACHE_TIMEOUT=3600

# Session timeout (seconds)
SESSION_COOKIE_AGE=86400

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development specific settings (only for development environment)
# DEVELOPMENT_MODE=True
# DJANGO_LOG_LEVEL=DEBUG
# SQL_DEBUG=True

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup settings
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups/

# ============================================================================
# MONITORING AND ALERTS
# ============================================================================

# Sentry (Error tracking) - Optional
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Health check settings
HEALTH_CHECK_TOKEN=your-health-check-token

# ============================================================================
# NOTES
# ============================================================================

# 1. Copy this file to .env in your project root
# 2. Update all placeholder values with your actual configuration
# 3. Never commit .env file to version control
# 4. Use different .env files for different environments
# 5. Ensure all required variables are set before deployment
# 6. Use strong, unique passwords and secret keys
# 7. Regularly rotate sensitive credentials
