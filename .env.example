# TapOne3 Environment Configuration
# Copy this file to .env and update the values according to your environment

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=True

# Database (for production, use PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static Files (for production with AWS S3 or similar)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name

# Social Auth (optional)
GOOGLE_OAUTH2_KEY=your-google-oauth-key
GOOGLE_OAUTH2_SECRET=your-google-oauth-secret

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# NFC Card Integration (for future features)
NFC_API_KEY=your-nfc-provider-api-key
NFC_API_SECRET=your-nfc-provider-secret

# Redis (for caching and sessions in production)
REDIS_URL=redis://localhost:6379/0

# Logging Level
LOG_LEVEL=INFO
